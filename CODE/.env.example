# NASA Earthdata Credentials
# Register at: https://urs.earthdata.nasa.gov/
# Generate token at: https://urs.earthdata.nasa.gov/profile
EARTHDATA_TOKEN=your_token_here

# Optional fallback (used only if token auth fails)
# If provided, the app will try EARTHDATA_USERNAME/PASSWORD after token failure
EARTHDATA_USERNAME=your_username_here
EARTHDATA_PASSWORD=your_password_here

# NASA FIRMS API Key
# Get your key at: https://firms.modaps.eosdis.nasa.gov/api/
FIRMS_API_KEY=your_firms_api_key_here

# OpenAQ API Key
# Get your key at: https://explore.openaq.org/register
OPENAQ_API_KEY=your_openaq_api_key_here

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=True
LOG_LEVEL=INFO

# Cache Configuration
CACHE_DIR=./cache
CACHE_EXPIRY_HOURS=6

# Data Processing
MAX_RADIUS_METERS=50000
MIN_RADIUS_METERS=100
DEFAULT_RADIUS_METERS=5000

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100
